[general]
accounts = main, ubertek, hpc, gmail, gmail2
maxsyncaccounts = 5
pythonfile = ~/.offlineimap.py

[Account main]
localrepository = main-local
remoterepository = main-remote
utf8foldernames = yes

[Repository main-local]
type = Maildir
localfolders = ~/.mail/main

[Repository main-remote]
type = IMAP
remotehost = mailcluster.loopia.se
remoteusereval = get_email_address("kalj")
remotepasseval = get_authinfo_password("mailcluster.loopia.se", get_email_address("kalj"), 993)
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

