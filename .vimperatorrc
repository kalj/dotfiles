" Window title
set titlestring=Iceweasel

" Command line and search patterns history
set history=10000

" Various search options
set incsearch
set hlsearch
set smartcase
set complete=sl

" Ex commands output in a new tab by default (prefs, addons...)
set newtab=all


" Reset many shortcuts to the firefox default
map <C-f> <Insert><C-f><Insert>
map <C-g> <Insert><C-g><Insert>
map <C-b> <Insert><C-b><Insert>
imap <C-h> <Insert><C-h><Insert>
imap <C-l> <Esc><C-l>
imap <C-k> <Esc><C-k>


" Key mappings
" cmap <C-n> <C-Tab>
" cmap <C-p> <C-S-Tab>
inoremap <C-n> <C-Tab>
inoremap <C-p> <C-S-Tab>



" Emacs navigation in command line and insert mode
" cmap <C-n> <Tab>
" cmap <C-p> <S-Tab>
" cmap <C-f> <Right>
" cmap <C-b> <Left>
" cmap <C-j> <CR>
" cmap <A-b> <C-Left>
" cmap <A-f> <C-Right>

" inoremap <C-f> <Right>
" inoremap <C-b> <Left>
" inoremap <C-j> <CR>
" inoremap <A-b> <C-Left>
" inoremap <A-f> <C-Right>
" inoremap <C-n> <Down>
" inoremap <C-p> <Up>


" imap <C-f> <Right>
" imap <C-b> <Left>
" imap <A-b> <C-Left>
" imap <A-f> <C-Right>


